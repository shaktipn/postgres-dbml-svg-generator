{
    "name": "postgres-dbml-svg-generator",
    "version": "1.0.0",
    "description": "GitHub Action to generate DBML and SVG from PostgreSQL DB schema",
    "main": "dist/index.js",
    "scripts": {
        "build": "npm run build-ts && npm run build-ncc",
        "build-ncc": "ncc build dist/index.js -o dist",
        "build-ts": "tsc -b",
        "start": "npm run build",
        "lint": "eslint --ext .ts --fix .",
        "lint-check": "eslint . --ext .ts",
        "format": "prettier --write . --config ./.prettierrc",
        "format-check": "prettier --check . --config ./.prettierrc",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "dependencies": {
        "@actions/core": "^1.10.0",
        "pg": "^8.12.0"
    },
    "devDependencies": {
        "@types/node": "^20.12.0",
        "@types/pg": "^8.11.0",
        "eslint": "^8.31.0",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@vercel/ncc": "^0.38.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.7.1"
    }
}
